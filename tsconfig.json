{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "es2021",
		"allowJs": true,

		"noImplicitOverride": true,

		/* LIT */
		"experimentalDecorators": true,
		"useDefineForClassFields": false
	},
	"include": ["./src/**/*"]
}
