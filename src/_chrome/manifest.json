{
	"name": "Omnisearch Companion",
	"version": "1.2.0",
	"description": "Display relevant search results from the Obsidian Omnisearch plugin.",
	"icons": {
		"128": "../../icons/chrome-icon.png"
	},
	"permissions": [
		"tabs",
		"storage"
	],
	"manifest_version": 3,
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"../content_scripts/cScript.ts"
			]
		}
	],
	"action": {
		"default_icon": "../../icons/chrome-icon.png",
		"default_title": "Omnisearch Companion",
		"default_popup": "../popup/popup.html"
	},
	"options_ui": {
		"page": "../options/options.html"
	},
	"background": {
		"service_worker": "../background_scripts/bgScript.ts",
		"type": "module"
	}
}